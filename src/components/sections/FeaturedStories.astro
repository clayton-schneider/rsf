---
import { BackgroundImage } from "astro-imagetools/components";

const stories = [
  {
    img: "/src/imgs/home/success-story-1.jpg",
    year: "2014",
    name: "Marsha Doran",
    summary:
      "Description area for a quick summary about this recipient, what they were awarded and what they are doing ",
    link: "/link",
  },
  {
    img: "/src/imgs/home/success-story-1.jpg",
    year: "2014",
    name: "Marsha Doran",
    summary:
      "Description area for a quick summary about this recipient, what they were awarded and what they are doing ",
    link: "/link",
  },
  {
    img: "/src/imgs/home/success-story-1.jpg",
    year: "2014",
    name: "Marsha Doran",
    summary:
      "Description area for a quick summary about this recipient, what they were awarded and what they are doing ",
    link: "/link",
  },
];
---

<section class="max-w-7xl mx-auto my-20 px-[5%] xl:px-0 text-textColor">
  <h2 class="font-bold text-3xl text-center lg:text-left">
    Featured Success Stories
  </h2>

  <div
    class="flex justify-between flex-col space-y-4 items-center md:space-y-0 md:flex-row mt-4 flex-wrap"
  >
    {
      stories.map((story, index) => (
        <div class="max-w-[350px] bg-secondary rounded">
          <div class="overflow-hidden rounded-t">
            <BackgroundImage src={story.img} aspect={350 / 250}>
              <div class="bg-cover pt-40 pb-4 px-4">
                <p class="text-white font-bold text-3xl">{story.name}</p>
              </div>
            </BackgroundImage>
          </div>
          <div class="p-5">
            <p class="rounded-full px-3 py-1 mt-2 text-white font-bold bg-primary inline-block">
              {story.year}
            </p>
            <p class="mt-3 leading-paragraph">{story.summary}</p>
            <a
              href={story.link}
              class="block font-bold text-sm text-right mt-5 ml-auto"
            >
              Read More
            </a>
          </div>
        </div>
      ))
    }
  </div>
</section>
