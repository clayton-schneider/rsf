---
const links = [
  { linkText: "About Us", link: "/about" },
  { linkText: "Scholarships", link: "/scholarships" },
  { linkText: "Success Stories", link: "/success-stories" },
  { linkText: "Contact Us", link: "/contact" },
];

const primaryCta = {
  linkText: "Apply Now",
  link: "/apply",
};

const secondCta = {
  linkText: "Donate",
  link: "/donate",
};
---

<header class="bg-primary p-5 flex items-center text-white justify-between">
  <a href="/" class="font-yeseva text-2xl">Roxbury Scholarship Foundation</a>

  <ul class="lg:flex space-x-2 items-center hidden">
    {
      links.map((link) => (
        <a href={link.link} class="">
          <li>{link.linkText}</li>
        </a>
      ))
    }
    <a
      href={secondCta.link}
      class="border border-white py-2 px-4 rounded font-bold"
      >{secondCta.linkText}
    </a>
    <a
      href={primaryCta.link}
      class="bg-white text-primary py-2 px-4 rounded font-bold"
      >{primaryCta.linkText}
    </a>
  </ul>
</header>
