---
// import styles MUST DO ON EVERY PAGE
import "../styles.css";

// Import Layout
import Layout from "../layouts/Layout.astro";

import addressIcon from "../imgs/contact/address.svg";
import emailIcon from "../imgs/contact/email.svg";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Contact Us | Roxbury Scholarship Foundation</title>
  </head>
  <Layout>
    <main>
      <section
        class="max-w-7xl mx-auto py-20 flex items-center md:items-start flex-col md:space-x-4 md:flex-row justify-between px-[5%] xl:px-0 text-textColor"
      >
        <div>
          <h1 class="text-7xl font-bold text-primary">Contact Us</h1>
          <div class="mt-14 flex items-start">
            <img src={addressIcon} alt="address" />
            <div class="ml-6">
              <p class="font-bold text-xl leading-none">Address</p>
              <p class="mt-2">
                Roxbury Scholarship Foundation, <br /> PO Box 106 Roxbury, <br
                />CT 06783
              </p>
            </div>
          </div>
          <div class="mt-9 flex items-start">
            <img src={emailIcon} alt="email" />
            <div class="ml-6">
              <p class="font-bold text-xl leading-none">email</p>
              <p class="mt-2 break-all">
                roxburyscholarshipfoundation@gmail.com
              </p>
            </div>
          </div>
        </div>

        <div
          class="border-2 mt-4 md:mt-0 border-secondary rounded flex-1 max-w-lg p-12"
        >
          <h3 class="text-center font-bold text-4xl">Reach Out</h3>
          <form data-static-form-name="contact">
            <div>
              <div>
                <label for="first-name">First name</label>
                <input
                  type="text"
                  name="first-name"
                  id="first-name"
                  autocomplete="given-name"
                />
              </div>

              <div>
                <label for="last-name">Last name</label>
                <input
                  type="text"
                  name="last-name"
                  id="last-name"
                  autocomplete="family-name"
                />
              </div>

              <div>
                <label for="email-address">Email address</label>
                <input
                  type="text"
                  name="email-address"
                  id="email-address"
                  autocomplete="email"
                />
              </div>

              <div>
                <label for="phone">Phone</label>
                <input
                  type="text"
                  name="phone"
                  id="phone"
                  autocomplete="phone"
                />
              </div>
              <div>
                <label for="message">Message</label>
                <textarea id="message" name="message" rows="4"></textarea>
              </div>
            </div>
            <div>
              <button type="submit">Send Enquiry</button>
            </div>
          </form>
        </div>
      </section>
    </main>
  </Layout>
</html>
