---
// Import Layout
import Layout from "../layouts/Layout.astro";

import addressIcon from "../imgs/contact/address.svg";
import emailIcon from "../imgs/contact/email.svg";
import ContactForm from "@components/forms/ContactForm";

const fields = [
  { fieldType: "text", id: "first", name: "First Name" },
  { fieldType: "text", id: "last", name: "Last Name" },
  { fieldType: "email", id: "email", name: "Email Address" },
  { fieldType: "tel", id: "phone", name: "Phone Number" },
  { fieldType: "textarea", id: "message", name: "Message" },
];
---

<Layout
  seo={{
    metaTitle: "Contact Us | Roxbury Scholarship Foundation",
    metaDescription:
      "Reach out to us if you have any questions or need to get in contact.",
  }}
>
  <section
    class="max-w-7xl mx-auto py-20 flex items-center md:items-start flex-col md:space-x-4 md:flex-row justify-between px-[5%] xl:px-0 text-textColor"
  >
    <div>
      <h1 class="text-7xl font-bold text-primary">Contact Us</h1>
      <div class="mt-14 flex items-start">
        <img src={addressIcon} alt="address" />
        <div class="ml-6">
          <p class="font-bold text-xl leading-none">Address</p>
          <p class="mt-2">
            Roxbury Scholarship Foundation, <br /> PO Box 106 Roxbury, <br />CT
            06783
          </p>
        </div>
      </div>
      <div class="mt-9 flex items-start">
        <img src={emailIcon} alt="email" />
        <div class="ml-6">
          <p class="font-bold text-xl leading-none">email</p>
          <p class="mt-2 break-all">roxburyscholarshipfoundation@gmail.com</p>
        </div>
      </div>
    </div>

    <div
      class="border-2 mt-4 md:mt-0 border-secondary rounded flex-1 max-w-lg p-12"
    >
      <h3 class="text-center font-bold text-4xl">Reach Out</h3>
      <ContactForm
        client:load
        fields={fields}
        name="RSF: Contact Us"
        message="Thank you for submitting this contact form. We will get back to you as soon as possible."
        error="There was an error submitting this form. Please refresh and try again. If the problem persists, send us an email directly."
      />
    </div>
  </section>
</Layout>
