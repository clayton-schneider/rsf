---
// import styles MUST DO ON EVERY PAGE
import "../styles.css";

// Import Layout
import Layout from "../layouts/Layout.astro";

import { Image } from "@astrojs/image/components";
import addressIcon from "../imgs/contact/address.svg";
import emailIcon from "../imgs/contact/email.svg";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Contact Us | Roxbury Scholarship Foundation</title>
  </head>
  <Layout>
    <main>
      <section class="max-w-7xl mx-auto py-20 flex justify-between">
        <div>
          <h1 class="text-7xl font-bold text-primary">Contact Us</h1>
          <div class="mt-14 flex items-start">
            <img src={addressIcon} alt="address" />
            <div class="ml-6">
              <p class="font-bold text-xl leading-none">Address</p>
              <p class="mt-2">
                Roxbury Scholarship Foundation, <br /> PO Box 106 Roxbury, <br
                />CT 06783
              </p>
            </div>
          </div>
          <div class="mt-9 flex items-start">
            <img src={emailIcon} alt="email" />
            <div class="ml-6">
              <p class="font-bold text-xl leading-none">email</p>
              <p class="mt-2">roxburyscholarshipfoundation@gmail.com</p>
            </div>
          </div>
        </div>

        <div>
          <h3>Reach Out</h3>
        </div>
      </section>
    </main>
  </Layout>
</html>
