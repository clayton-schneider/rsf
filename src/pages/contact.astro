---
// import styles MUST DO ON EVERY PAGE
import "../styles.css";

// Import Layout
import Layout from "../layouts/Layout.astro";

import addressIcon from "../imgs/contact/address.svg";
import emailIcon from "../imgs/contact/email.svg";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Contact Us | Roxbury Scholarship Foundation</title>
  </head>
  <Layout>
    <main>
      <section
        class="max-w-7xl mx-auto py-20 flex items-center md:items-start flex-col md:space-x-4 md:flex-row justify-between px-[5%] xl:px-0 text-textColor"
      >
        <div>
          <h1 class="text-7xl font-bold text-primary">Contact Us</h1>
          <div class="mt-14 flex items-start">
            <img src={addressIcon} alt="address" />
            <div class="ml-6">
              <p class="font-bold text-xl leading-none">Address</p>
              <p class="mt-2">
                Roxbury Scholarship Foundation, <br /> PO Box 106 Roxbury, <br
                />CT 06783
              </p>
            </div>
          </div>
          <div class="mt-9 flex items-start">
            <img src={emailIcon} alt="email" />
            <div class="ml-6">
              <p class="font-bold text-xl leading-none">email</p>
              <p class="mt-2 break-all">
                roxburyscholarshipfoundation@gmail.com
              </p>
            </div>
          </div>
        </div>

        <div
          class="border-2 mt-4 md:mt-0 border-secondary rounded flex-1 max-w-lg p-12"
        >
          <h3 class="text-center font-bold text-4xl">Reach Out</h3>
          <form method="POST" action="/api/submit">
            <div class="flex space-x-2 mt-4">
              <div>
                <label for="firstName" class="block text-sm font-bold"
                  >First Name *</label
                >
                <input
                  name="firstName"
                  type="text"
                  id="firstName"
                  class="appearance-none w-full border-2 py-1 px-2 text-textColor leading-tight focus:outline-none border-secondary rounded"
                />
              </div>

              <div>
                <label for="lastName" class="block text-sm font-bold"
                  >Last Name*</label
                >
                <input
                  name="lastName"
                  type="text"
                  id="lastName"
                  class="appearance-none w-full border-2 py-1 px-2 text-textColor leading-tight focus:outline-none border-secondary rounded"
                />
              </div>
            </div>
            <div class="mt-4">
              <label for="email" class="block text-sm font-bold"
                >Email Address *</label
              >
              <input
                name="email"
                type="email"
                id="email"
                class="appearance-none w-full border-2 py-1 px-2 text-textColor leading-tight focus:outline-none border-secondary rounded"
              />
            </div>
            <div class="mt-4">
              <label for="phone" class="block text-sm font-bold">Phone *</label>
              <input
                name="telephone"
                type="tel"
                id="phone"
                class="appearance-none w-full border-2 py-1 px-2 text-textColor leading-tight focus:outline-none border-secondary rounded"
              />
            </div>
            <div class="mt-4">
              <label for="message" class="block text-sm font-bold"
                >Message *</label
              >
              <textarea
                name="message"
                id="message"
                rows="4"
                class="appearance-none w-full border-2 py-1 px-2 text-textColor leading-tight focus:outline-none border-secondary rounded resize-none"
              ></textarea>
            </div>
            <button
              type="submit"
              class="uppercase border-2 border-transparent transition duration-300 hover:font-bold hover:bg-transparent hover:border-2 hover:border-primary hover:text-primary rounded bg-primary w-full py-2 text-white tracking-widest text-sm"
              >Send</button
            >
          </form>
        </div>
      </section>
    </main>
  </Layout>
</html>
