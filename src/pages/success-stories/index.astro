---
// import styles MUST DO ON EVERY PAGE
import "../../styles.css";

// Import Layout
import Layout from "../../layouts/Layout.astro";

// Import Data
import successStories from "@data/success-stories/successStories";
import SuccessCard from "@components/cards/SuccessCard.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>About Us | Roxbury Scholarship Foundation</title>
  </head>
  <Layout>
    <main>
      <section class="my-10 lg:my-20">
        <div class="max-w-7xl mx-auto">
          <h1 class="font-bold text-center lg:text-left text-5xl">
            Our Success Stories
          </h1>
          <div class="mt-10 grid grid-cols-3 gap-10">
            {successStories.map((story) => <SuccessCard data={story} />)}
          </div>
        </div>
      </section>
    </main>
  </Layout>
</html>
